<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:translationZ="-5dp"
    app:cardCornerRadius="10dp"
    android:layout_marginRight="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/chocolate">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/right_corners"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="10dp">
            <LinearLayout
                android:padding="10dp"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/user_list_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yashpal Bharti,"
                        android:fontFamily="serif"
                        android:textSize="16sp"
                        android:textColor="@color/chocolate"/>
                    <TextView
                        android:id="@+id/user_list_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="21 years"
                        android:fontFamily="serif"
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="bottom"
                        android:textColor="@color/fragment_title_background"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/dob"
                        app:tint="@color/chocolate"/>
                    <TextView
                        android:id="@+id/user_list_dob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="02-03-2000"
                        android:fontFamily="serif"
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:textColor="@color/chocolate"/>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>